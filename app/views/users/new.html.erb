    <div class="container text-center">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <hr>

            <h2>Sign Up</h2>
          </br>
          <div class="col-md-12 text-danger">
            <%=flash[:error] %>
        </div>

            <%= form_for :user, url: '/users' do |f| %>
            <div class = "form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Name"%>
            </div>
            <div class = "form-group">
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class = "form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
            </div>
              <div class = "form-group">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
            </div>
            <%= f.hidden_field :image, :value => "http://img.photobucket.com/albums/v405/Heracross/Team%20Rocket/Culture.jpg" %>
            <div class = "form-group">
              <hr>
            <%= f.submit "Submit", class: "btn btn-danger"%>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
