<div class="container text-center">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <hr>

      <%= form_for :user, url: user_update_path, method: :put do |f| %>
      <div class = "form-group">
        Name: <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class = "form-group">
        Current City: <%= f.text_field :current_city, class: "form-control"  %>
      </div>
      <div class = "form-group">
        Image: <%= f.text_field :image, class: "form-control"  %>
      </div>
        <%= f.submit "Submit", class: "btn btn-danger" %>
      <% end %>

    </div>
  </div>
</div>
